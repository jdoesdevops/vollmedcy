{
	"compilerOptions": {
		"module": "ES2022",
		"lib": [
			"ES6",
			"dom"
		],
		"types": ["cypress", "node"],
		"rootDirs": [
			"./src"
		],
		"outDir": "./build",
		"allowJs": true,
		"target": "es2017",
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"strictNullChecks": true,
	},
	"include": [
		"./src/**/*",
		"**/*.ts"
	],
	"exclude": [
		"node_modules",
		"cypress.config.ts",
		"cypress"
	],
}